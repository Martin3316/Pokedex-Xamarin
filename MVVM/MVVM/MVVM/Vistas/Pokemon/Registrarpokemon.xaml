<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Vistas.Pokemon.Registrarpokemon"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="80,*"
          BackgroundColor="#1d1d1d">
        <StackLayout Orientation="Horizontal"
                     Margin="10">
            <Image Source="https://i.ibb.co/r6d9rnQ/volver.png"
                   Margin="10"
                   HeightRequest="25"
                   >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Volvercommand}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Source="https://i.ibb.co/tC1FVWt/Titulo-Universo-Pok-mon.png"
                           HorizontalOptions="CenterAndExpand"/>
            <!--<Image Source="https://i.ibb.co/zrwJVH6/Pokeball-PNG.png"/>-->
        </StackLayout>
        <StackLayout Grid.Row="1"
                     Margin="10,-10,0,0">
            <StackLayout Orientation="Horizontal">
                <Label Text="Nombre"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Entry Placeholder="Ingrese el nombre"
                       FontAttributes="Bold"
                       TextColor="#ffeb72"
                       PlaceholderColor="White"
                       TextTransform="Lowercase"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtnombre}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Color fondo"
            TextColor="White"
            FontAttributes="Bold"
            VerticalOptions="Center"/>
                <Entry Placeholder="Ingrese el color fondo"
            FontAttributes="Bold"
            TextColor="{Binding Txtcolorfondo}"
            PlaceholderColor="White"
            TextTransform="Lowercase"
            FontSize="20"
            HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtcolorfondo}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Nro:"
                       TextColor="White"
                         FontAttributes="Bold"
                        VerticalOptions="Center"/>
                <Entry Placeholder="Ingrese el Nro"
                         FontAttributes="Bold"
                        TextColor="White"
                         PlaceholderColor="White"
                          TextTransform="Lowercase"
                          FontSize="20"
                           HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtnro}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Icono"
                         TextColor="White"
                         FontAttributes="Bold"
                         VerticalOptions="Center"/>
                <Entry Placeholder="Ingrese el icono"
                         FontAttributes="Bold"
                        TextColor="White"
                         PlaceholderColor="White"
                        TextTransform="Lowercase"
                        FontSize="20"
                         HorizontalOptions="StartAndExpand"
                       Text="{Binding Txticono}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Poder:"
             TextColor="White"
             FontAttributes="Bold"
             VerticalOptions="Center"/>
                <Entry Placeholder="Ingrese el poder"
             FontAttributes="Bold"
            TextColor="White"
             PlaceholderColor="White"
            TextTransform="Lowercase"
            FontSize="20"
             HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtpoder}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Color poder:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"/>
                <Entry Placeholder="Ingrese el color del poder"
                        FontAttributes="Bold"
                        TextColor="{Binding Txtcolorpoder}"
                        PlaceholderColor="White"
                        TextTransform="Lowercase"
                        FontSize="20"
                        HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtcolorpoder}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center">
                <Image Source="https://i.ibb.co/jzBptmj/visibilidad.png"
                       HeightRequest="20"/>
                <Label Text="Vista previa"
                       FontSize="20"
                       TextColor="White"
                       FontAttributes="Italic"
                       VerticalOptions="Center"/>
            </StackLayout>
            <Grid RowDefinitions="80,*"
                  Margin="0,-5,0,0">
                <Frame Grid.Row="1"
                       WidthRequest="250"
                       HorizontalOptions="Center"
                       CornerRadius="10"
                       Padding="10"
                       Margin="0,-20,0,0"
                       BackgroundColor="{Binding Txtcolorfondo}">
                    <StackLayout
                        Margin="0,70,0,0">
                        <Label Text="{Binding Txtnro}"
                               TextColor="Black"/>
                        <Label Text="{Binding Txtnombre}"
                               CharacterSpacing="1"
                               FontSize="20"
                               TextColor="Black"
                               Margin="0,0,0,10"/>
                        <Button Text="{Binding Txtpoder}"
                                CornerRadius="30"
                                HorizontalOptions="Start"
                                TextTransform="None"
                                HeightRequest="40"
                                WidthRequest="80"
                                BackgroundColor="{Binding Txtcolorpoder}"/>
                    </StackLayout>
                </Frame>
                <Image Source="{Binding Txticono}"
                       Grid.RowSpan="2"       
                       HeightRequest="180"
                       VerticalOptions="StartAndExpand"/>
            </Grid>
            
            <Frame HorizontalOptions="Center"
                   Padding="6"
                   Margin="0,10,0,0"
                   CornerRadius="20"
                   HasShadow="False"
                   BackgroundColor="#FFE548">
                <Button Text="+"
                        Margin="0,0,0,0"
                        TextColor="Black"
                        HorizontalOptions="Center"
                        BackgroundColor="#FFE15D"
                        BorderColor="#FFF288"
                        BorderWidth="6"
                        CornerRadius="15"
                        FontAttributes="Bold"
                        FontSize="25"
                        WidthRequest="60"
                        HeightRequest="60"
                        Command="{Binding Insertarcommand}"/>
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>